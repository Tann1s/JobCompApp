<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Job Compare 6300"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34sp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="193dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Team 160"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="193dp" />

        <Button
            android:id="@+id/CurrentJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="240dp"
            android:text="Enter or edit current job"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="287dp" />

        <Button
            android:id="@+id/JobOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="240dp"
            android:text="Enter Job Offers"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="356dp" />

        <Button
            android:id="@+id/ComparisonSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="240dp"
            android:text="Adjust the comparison setting"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="421dp" />

        <Button
            android:id="@+id/CompareJobOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="240dp"
            android:text="Compare job offers"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="487dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>